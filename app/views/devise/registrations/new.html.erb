<div class="container">
<% cond = params[:is_supplier] %>
<% if cond%>
  <h2 class= "text-center">Bienvenue</h2>
  <h3 class= "text-center"><i class="fa fa-rocket"></i> Décuplez vos réservations grâce à Broddies <i class="fa fa-rocket"></i></h3>
<% else %>
  <h2 class= "text-center"> Bienvenue jeune Broddy</h2>
  <h2 class= "text-center"> <i class="fa fa-tree"></i><i class="fa fa-tree"></i><i class="fa fa-tree"></i></h2>
  <% end %>


  <div class="row text-center signup_form">

    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>


          <%= f.input :email, required: true, placeholder: 'nom@gmail.com', label: false, autofocus: true %>
          <%= f.input :password, required: true, placeholder: 'choisissez un mot de passe', label: false %>
          <%= f.input :password_confirmation, label: false, placeholder: 'confirmez le mot de passe', required: true %>

          <% if cond%>
            <%= f.input :is_supplier, :as => :hidden, label: false, input_html: { checked: true} %>
            <% else %>
            <%= f.input :is_supplier, :as => :hidden, label: false, input_html: { checked: false}  %>
          <% end %>

          <%= f.button :submit, "Sign up", class: "btn-primary" %>
        <% end %>
      </div>

  </div>

<%= render "devise/shared/links" %>
</div>

<%#= input_html: { checked: true } %>
