<!-- banner -->
<div class="wrapper-white">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "verdon-canoe.jpg" %>);">
    <div class="banner-content">
      <h1>Bienvenue sur votre terrain de jeu</h1>
      <p>Les meilleures activités à découvrir entre amis partout en France</p>
      <%= form_tag activities_path, method: "get", class: "form-inline" do %>
      <%= text_field_tag :category, "", class: "form-control", placeholder: "Votre activité" %>
      <%= text_field_tag :city, "", class: "form-control", placeholder: "Adresse" %>
      <%= submit_tag 'Rechercher', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <div class="container-sample">
    <div class="row">
      <p class = "text-center"><strong>+ de 400 activités et séjours sportifs à découvrir</strong></p>
      <div class="sample" id="showcase">
        <% sample = @activities.sample(3) %>
        <% sample.each do |activity| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card card-home">
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= cl_image_path activity.photo.path%>');">
            </div>
            <div class="card-footer card-footer-home">
              <div class="footer-left col-xs-8">
                <div class="title">
                  <p><%= link_to activity.title, activity_path(activity) %></p>
                </div>
                <div class="city">
                  <p><%= activity.city %></p>
                </div>
              </div>
              <div class="footer-right col-xs-4">
                <div class="price">
                  <p><%= activity.pricings[0].amount %>€/pers.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="cat-intro">
    <p class = "text-center"><strong>Activités séléctionnées pour vous</strong></p>
  </div>
