<!-- modal pour faire la réservation -->
<div id="myModal" class="modal fade" tabindex="-1" role="dialog">

  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4>Réserver <%=  @activity.title%></h4>


      </div>

      <div class="modal-body">
        <%= simple_form_for [@activity, @booking] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nb_persons, label: "Nombre de personnes:", collection: 0..@activity.capacity %>
            <div id='resa'>
              <%= f.association :pricing, as: :radio_buttons, collection: @activity.pricings, label: false, label_method: lambda { |item| "#{item.description}, #{item.amount} euros"}%>
            </div>
            <%= f.input :booking_start, label: 'Date:', as: :string, input_html: {class: 'datepicker'} %>
            <%= f.input :price, :as => :hidden, class: 't_price_p' %>
          </div>
            <div class="price_resa">
              <p><strong>Prix total:</strong></p>
              <p id="t_price"></p>
            </div>
      </div>
      <div class="modal-footer">
          <div class="form-actions">
            <%= f.submit "Valider réservation", class: 'btn btn-primary text-center hidebutton'%>
          </div>
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

